<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="20dp"
        tools:context=".ui.addplayer.AddPlayerActivity">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/no_players_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:text="@string/empty_players_list"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/add_player_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_btn" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/all_players_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            tools:listitem="@layout/item_player"
            tools:itemCount="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_btn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_player_btn"
            style="@style/ButtonsStyle"
            android:layout_width="match_parent"
            android:text="@string/add_players"
            android:textSize="19sp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            style="@style/HighlightStyle"
            app:layout_constraintBottom_toBottomOf="@+id/add_player_btn"
            app:layout_constraintEnd_toEndOf="@+id/add_player_btn"
            app:layout_constraintStart_toStartOf="@+id/add_player_btn"
            app:layout_constraintTop_toTopOf="@+id/add_player_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>