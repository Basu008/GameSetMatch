<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/player_logo_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_player"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Basu Singh"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/button_color"
        android:fontFamily="@font/gilroy_bold"
        app:layout_constraintStart_toEndOf="@+id/player_logo_iv"
        app:layout_constraintTop_toTopOf="@+id/player_logo_iv" />

    <TextView
        android:id="@+id/player_rating_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_medium"
        android:text="@string/player_grade"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/player_logo_iv"
        app:layout_constraintStart_toStartOf="@+id/player_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/player_name_tv" />

    <TextView
        android:id="@+id/player_rating_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        tools:text="A"
        android:textSize="19sp"
        android:fontFamily="@font/gilroy_bold"
        android:textColor="@color/yellow"
        app:layout_constraintBottom_toBottomOf="@+id/player_rating_heading"
        app:layout_constraintStart_toEndOf="@+id/player_rating_heading"
        app:layout_constraintTop_toTopOf="@+id/player_rating_heading" />

    <ImageView
        android:id="@+id/right_arrow_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="@+id/player_logo_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/player_logo_iv" />

    <ImageView
        android:id="@+id/football_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_football"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/player_rating_heading"
        app:layout_constraintStart_toEndOf="@+id/player_rating_value"
        app:layout_constraintTop_toTopOf="@+id/player_rating_heading" />

    <ImageView
        android:id="@+id/basketball_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_basketball"
        app:layout_constraintBottom_toBottomOf="@+id/player_rating_heading"
        app:layout_constraintStart_toEndOf="@+id/football_iv"
        app:layout_constraintTop_toTopOf="@+id/player_rating_heading" />


</androidx.constraintlayout.widget.ConstraintLayout>